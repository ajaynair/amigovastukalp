
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"] // Maps @/ to the project root
    }
  },
  "include": ["**/*.ts", "**/*.tsx"], // Include all .ts and .tsx files in the project
  "exclude": ["node_modules", "dist", "vite.config.ts"], // Exclude vite.config.ts
  "references": [{ "path": "./tsconfig.node.json" }]
}
